

<section class ="flat-index">
  <div class="flat-cards"> 
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
        </button>
        <% end %>
      </div>
  
  
    <div class="card-product">
        <img src="" />
        <div class="card-product-infos">
          <ul>
          <% @flats.each do |flat| %>
            <li><%= link_to "#{flat.name}", flat_path(flat)%></li>
          <% end %>
        </ul>
          <p>Contempory house, with modern furnishings. Absolute <strong>banger</strong> of a party spot.</p>
        </div>
    </div>
  </div>
  <div class="map-index" id="map"
     style= "height: 600px; width: 50%;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</section>


