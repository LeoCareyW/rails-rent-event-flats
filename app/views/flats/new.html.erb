
<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center mb-4">List a Flat</h3>
          <div class="container">
            <%= simple_form_for(@flat) do |f| %>
              <%= f.input :name %>
              <%= f.input :address %>
              <%= f.input :description %>
              <%= f.input :price %>
              <%= f.input :photo, as: :file %>
              <label class="small">
                  <input name="terms" type="checkbox">I have read and agree to the <a href="#">terms of service</a>
              </label>
              <%= f.submit class: "btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

