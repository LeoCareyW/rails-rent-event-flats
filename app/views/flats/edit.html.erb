<div class="container-fluid bg-light py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card card-body">
        <h3 class="text-center mb-4">Edit Your Flat</h3>
          <div class="container">
            <%= simple_form_for(@flat) do |f| %>
              <%= f.input :name %>
              <%= f.input :address %>
              <%= f.input :description %>
              <%= f.input :price %>
              <p> Pool <%= f.check_box :pool %> &nbsp&nbsp&nbsp Speakers <%= f.check_box :speakers %> &nbsp&nbsp&nbsp Cleaner <%= f.check_box :cleaner %> </p>
              <p> Wifi  <%= f.check_box :wifi %> &nbsp&nbsp&nbsp Smoking <%= f.check_box :smoking %> &nbsp&nbsp&nbsp Ice Maker <%= f.check_box :icemaker %> </p>
              <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              <label class="small">
                  <input name="terms" type="checkbox">I have read and agree to the <a href="#">terms of service</a>
              </label>
              <%= f.submit class: "btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

